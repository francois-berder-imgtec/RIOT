config BOARD
    default "6lowpan-clicker" if BOARD_6LOWPAN_CLICKER

config BOARD_6LOWPAN_CLICKER
    bool
    default y
    select CPU_MODEL_PIC32MX470F512H
    select HAS_PERIPH_GPIO
    select HAS_PERIPH_GPIO_IRQ
    select HAS_PERIPH_UART
